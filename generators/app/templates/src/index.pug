		.row.u-mbb8.u-mbb10-md
			.col
				h2.u-mbb2 Slider Example
				.o-slide(data-module="slickjs" data-module-options="{ key: 'hero', slidesToShow: 3 }")
					each item,index in [1,2,3,4,5,6]
						.slick-slide.u-ovh.o-slide__item
							img(src="http://unsplash.it/400/300/?image="+index)

		.u-mbb8.u-mbb10-md
			h2.u-mbb2 Focus On Example
			button#btn1(data-module="focuson" data-module-options="{ target: '#btn2'}") Button 1
			button#btn2(data-module="focuson" data-module-options="{ target: '#btn1'}") Button 2

		.u-mbb8.u-mbb10-md
			h2.u-mbb2 Triggerer Example
			button#btn3(data-module="triggerer" data-module-options="{ target: '#btn1', triggerEvents: 'focus' }") Trigger Focus of Btn1

		.u-mbb8.u-mbb10-md
			h2.u-mbb2 ScrollTo Example
			button(data-module="scrollto" data-module-options="{ target: 0 }") Scroll to top

		.u-mbb8.u-mbb10-md
			h2#toggle-title.u-mbb2 Toggle Example
			button(data-module="vtoggle" data-module-options="{ target: '#toggle-title', class:'u-dn' }") Show/Hide "Toggle Example" title

		.u-mbb8.u-mbb10-md
			h2.u-mbb2 Magnific Popup Example
			a(href="https://youtu.be/dQw4w9WgXcQ", data-module="magnificpopup" data-module-options="{ key: 'iframe' }") Open Video


		.u-mbb8.u-mbb10-md
			h2.u-mbb2 Dropdown
			.dropdown
				button#dropdownMenuButton.dropdown-toggle(type='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
					| Dropdown button
				.dropdown-menu(aria-labelledby='dropdownMenuButton')
					a.dropdown-item(href='#') Action
					a.dropdown-item(href='#') Another action
					a.dropdown-item(href='#') Something else here

		.u-mbb8.u-mbb10-md
			h2.u-mbb2 Collapse
			a(data-toggle='collapse', href='#collapseExample', role='button', aria-expanded='false', aria-controls='collapseExample')
				| Link with href
			button(type='button', data-toggle='collapse', data-target='#collapseExample', aria-expanded='false', aria-controls='collapseExample')
				| Button with data-target
			#collapseExample.collapse
